<% case @conference.timeslot_duration
   when 5
     base_size = 20
   when 10
     base_size = 30
   when 15
     base_size = 40
   else
     base_size = 80
   end
%>
<% @conference.max_timeslots.times do |i| %>
  .cell-height<%= i + 1 -%> { 
    height: <%= base_size * (i + 1) - (i > 0 ? 3 : 0)-%>px;
  }
<% end %>

<% if @conference.color.blank?
    conference_color = '555'
  else
    conference_color = @conference.color
  end
%>

.event.track-default {
  background-color: #<%= conference_color -%>;
  border-color: #<%= conference_color -%>;
}
.event.track-default div.event-header {
  background-color: #<%= conference_color -%>;
}
.conference-background {
  background-color: #<%= conference_color -%>;
}

<% @conference.tracks.each do |track| %>
  <% if track.color.blank?
      track_color = conference_color
    else
      track_color = track.color
    end
  %>

  .event.track-<%= track.name.parameterize -%> {
    background-color: #<%= track_color -%>;
    border-color: #<%= track_color -%>;
  }
  .event.track-<%= track.name.parameterize -%> div.event-header {
    background-color: #<%= track_color -%>;
  }
<% end %>
